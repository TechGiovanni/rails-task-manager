<h2><%= @task.title %></h2>

<div class="wrapper">
  <div class="show__desc">
    <%= @task.details %>
  </div>

  <%= link_to "Delete",
    task_path(@task.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>


  <a class="task__link" href="<%= @task.id %>/edit">
    <p>Edit</p>
  </a>

  <hr>
  <%= link_to "Go Back", tasks_path %>
</div>
